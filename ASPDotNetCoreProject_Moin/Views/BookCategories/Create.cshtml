@model ASPDotNetCoreProject_Moin.Models.BookCategory

<form enctype="multipart/form-data" asp-controller="BookCategories" asp-action="Create" method="post" class="mt-3">
    <div  style="text-align:center" class="modal-header">
        <h3 class="modal-title" id="categoryModalLabel">Create a new category</h3>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
    <div class="modal-body">
        <div class="form-group">
            Book's Category :
            <input asp-for="Name" class="form-control" placeholder="" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div id="0">
            <hr />

            <div class="row">
                <div class="form-group col-md-6">
                   Book Name :
                    <input asp-for="Books[0].Name" class="form-control" placeholder="" />
                    <span asp-validation-for="Books[0].Name" class="text-danger"></span>

                </div>
                <div class="form-group col-md-6">
                    Description :
                    <input asp-for="Books[0].Description" class="form-control" />
                    <span asp-validation-for="Books[0].Description" class="text-danger"></span>

                </div>
            </div>
            <div class="form-group row">
                <div class="col-md-12">
                    Book Image :

                    <img id="_0" src="" width="300" data-tag="bookImageinCategory" />
                    <input id="Image" name="Image" type="file" data-tag="_0" onchange="changeImage(this, event)" />
                    <span asp-validation-for="Books[0].BookImage" class="text-danger"></span>
                </div>

            </div>
            <br />
            <div class="row">
                <div class="form-group col-md-6">
                    Published Date :
                    <input asp-for="Books[0].PublishedDate" class="form-control" />
                    <span asp-validation-for="Books[0].PublishedDate" class="text-danger"></span>
                </div>

                <div class="form-group col-md-6">
                    Quantity : 
                    <input asp-for="Books[0].Quantity" class="form-control" />
                    <span asp-validation-for="Books[0].Quantity" class="text-danger"></span>
                </div>
            </div>
        </div>
        <hr />
        <div style="text-align:center" class="col-md-12">
            <button id="addModelButton" type="button" class="btn btn-info">Add Another Book</button>
        </div>
        <input id="sl" type="hidden" value="0" />
    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <input type="submit" class="btn btn-primary" value="Save" />
    </div>
</form>



