@model IEnumerable<ASPDotNetCoreProject_Moin.Models.Trainee>

@{
    ViewData["Title"] = "Index";
}

<h1 style="text-align:center; color:maroon">Registered Trainee Information</h1>
<hr />
<br />
<p>
    <a asp-action="Create">New Trainee Registration</a>
</p>
<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Address)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CellPhone)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CourseID)
            </th>
            <th> Action(s)</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Address)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CellPhone)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Course.CourseName)

                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.TraineeID">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.TraineeID">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.TraineeID">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
